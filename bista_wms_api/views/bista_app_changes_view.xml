<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="bista_app_changes_tree" model="ir.ui.view">
        <field name="name">bista.app.change.list</field>
        <field name="model">bista.app.change</field>
        <field name="arch" type="xml">
            <list create="0" edit="0">
                <field name="app_changed_id" widget="many2one_navigation"/>
                <field name="res_model" optional="hide"/>
                <field name="app_created"/>
                <field name="stock_picking_id"/>
                <field name="app_changes"/>
            </list>
        </field>
    </record>

    <record id="bista_app_changes_search" model="ir.ui.view">
        <field name="name">bista.app.change.search</field>
        <field name="model">bista.app.change</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group By">
                    <filter string="Resource Model" name="group_by_res_model" context="{'group_by' : 'res_model'}"></filter>
                    <filter string="Stock Picking ID" name="group_by_stock_picking_id" context="{'group_by' : 'stock_picking_id'}"></filter>
                </group>
            </search>
        </field>
    </record>

    <record id="action_bista_app_changes" model="ir.actions.act_window">
        <field name="name">Logs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bista.app.change</field>
        <field name="view_mode">list</field>
        <field name="context">{'search_default_group_by_res_model':1, 'search_default_group_by_stock_picking_id':1}</field>
    </record>

    <menuitem id="menu_bista_app_changes"
              name="Logs"
              parent="bista_wms_api.menu_bista_app_changes_parent_menu"
              action="action_bista_app_changes"
              groups = "base.group_system"
              sequence="1"/>
</odoo>