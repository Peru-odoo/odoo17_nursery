<odoo>
  <record id="view_stock_config_settings_form_negative" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.negative.stock</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//app[@name='stock']/block[@name='operations_setting_container']" position="inside">
        <group string="Negative Stock">
          <field name="allow_negative_stock"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
