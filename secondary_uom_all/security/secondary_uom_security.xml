<odoo>
  <data noupdate="1">
    <!-- Create a dedicated category so the checkboxes appear as one section -->
    <record id="module_category_secondary_uom" model="ir.module.category">
      <field name="name">Secondary Units</field>
      <field name="description">Feature flags for Secondary Unit of Measure</field>
      <field name="sequence">95</field>
    </record>

    <record id="group_secondary_uom_product" model="res.groups">
      <field name="name">Secondary Unit On Product</field>
      <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
    </record>

    <record id="group_secondary_uom_sale" model="res.groups">
      <field name="name">Secondary Unit On Sale</field>
      <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
    </record>

    <record id="group_secondary_uom_purchase" model="res.groups">
      <field name="name">Secondary Unit On Purchase</field>
      <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
    </record>

    <record id="group_secondary_uom_inventory" model="res.groups">
      <field name="name">Secondary Unit On Inventory</field>
      <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
    </record>

    <record id="group_secondary_uom_invoice" model="res.groups">
      <field name="name">Secondary Unit On Invoice</field>
      <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
    </record>

    <record id="group_secondary_uom_mrp" model="res.groups">
      <field name="name">Secondary Unit On Manufacturing</field>
      <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
    </record>

      <record id="group_secondary_uom_accounting" model="res.groups">
          <field name="name">Secondary Unit On Accounting</field>
          <field name="category_id" ref="secondary_uom_all.module_category_secondary_uom"/>
          <!-- Optional: grant Accounting group everything the Invoice group has -->
          <field name="implied_ids" eval="[(4, ref('secondary_uom_all.group_secondary_uom_invoice'))]"/>
      </record>

  </data>
</odoo>
